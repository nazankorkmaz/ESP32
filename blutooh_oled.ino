void setup() {
  Serial.begin(115200);
  Serial.println("OLED");

  if (SerialBT.begin("BluetoothExample")) {
    Serial.println("Bluetooth bağlantısı başlatıldı!");
  }

   oled.begin(SSD1306_SWITCHCAPVCC, adres); 
  pinMode(2, OUTPUT);
  oled.setCursor(0, 0);
}

void loop() {
  
  oled.clearDisplay();        // Ekranı temizleyelim
