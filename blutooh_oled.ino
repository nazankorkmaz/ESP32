}
void yaziyaz(String metin, int cx, int cy) {
  oled.setTextSize(2); // Yazı boyutu
  oled.setTextColor(SSD1306_WHITE);
  oled.setCursor(cx, cy); // Başlangıç konumu
  oled.println(metin);
  oled.display();
}
